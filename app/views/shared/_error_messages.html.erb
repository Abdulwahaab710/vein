<% if obj&.errors&.any? %>
  <%= tag.div class: "uk-alert-danger #{'uk-text-right' if I18n.locale == :ar}", 'uk-alert': '' do %>
    <a class="uk-alert-close" uk-close></a>
    The form contains <%= pluralize(obj.errors.count, "error") %>.
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
<% flash.each do |name, msg| %>
  <%= tag.div class: "uk-alert-#{name.to_sym == :error ? 'danger' : 'success'} #{'uk-text-right' if I18n.locale == :ar}", 'uk-alert': '' do %>
    <a class="uk-alert-close" uk-close></a>
    <p><%= msg %></p>
  <% end %>
<% end %>
